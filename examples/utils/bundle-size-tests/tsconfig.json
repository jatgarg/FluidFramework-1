{
    "extends": "@fluidframework/build-common/ts-common-config.json",
    "exclude": [
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "esnext",
        "outDir": "lib",
        "jsx": "react",
        "types": [
            "react",
            "react-dom",
            "jest",
            "puppeteer",
            "jest-environment-puppeteer"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
